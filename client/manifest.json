{
  "manifest_version": 3,
  "name": "Toolkit Co-pilot",
  "version": "1.0.0",
  "description": "Toolkit Co-pilot for BlueSquareApps with OAuth and side panel UI",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "https://rc.bluesquareapps.com/*",
    "https://toolkit.bluesquareapps.com/*",
    "https://personalassistant-seven.vercel.app/*",
    "http://localhost:3000/*"
  ],
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "action": {
    "default_title": "Toolkit Co-pilot",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": [
      "components/*.js",
      "styles/*.css",
      "services/*.js",
      "lib/*.js"
    ],
    "matches": ["<all_urls>"]
  }]
}